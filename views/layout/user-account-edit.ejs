<%-breadcrumb%>
<div class="card">
  <div class="card-header">
    <h2 class="m-b-5"><%- title %></h2>
    <small class="text-muted"><i>Những trường có dấu <span class="c-red">*</span> là bắt buộc nhập. </i></small>
  </div>
  <div class="card-body card-padding">
    <div id="warning-message" class="text-center m-b-10 text-danger">

    </div>
    <input type="text" hidden value="<%=User._id%>" id="id">
    <div class="form-horizontal" id="create-form">
      <div class="form-group">
        <label for="" class="col-sm-3 control-label">Vị trí</span></label>
        <div class="col-sm-6">
          <div class="fg-line">
            <input type="text" value="<%=User.positionName%>" class="form-control input-sm" id="positionName"
              name="positionName">
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="" class="col-sm-3 control-label">Nhóm nhận yêu cầu<span class="required">*</span></label>
        <div class="col-sm-6">
          <%supportEmails.forEach((e,i) => {%>
          <div class="form-check">
            <input class="form-check-input" name="email" type="checkbox"
              <%=JSON.stringify(User.groupEmail).includes(JSON.stringify(e._id)) ? "checked" : null%>
              value="<%=e._id%>">
            <label class="form-check-label" for="defaultCheck2">
              <%=e.name%> (<%=e.email%>)
            </label>
          </div>
          <%})%>
        </div>
      </div>
      <div class="text-center">
        <button type="submit" id="update" class="btn btn-success">Gửi</button>
        <button type="button" id="back" class="btn btn-danger">Đóng</button>
      </div>
    </div>
  </div>
</div>